@section scripts{



    <script>

        $(document).ready(function () {

            $('#example1').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
            });

        });
        $("#btnAddmsjid").click(function () {
            //showLoading();
            $("#Masjdadmodelbody").load("/SpecialDate/AddSpecialDate", function (e) {
                $("#AddMasjidModel").modal("show");
                //hideLoading();
            });
        });


        function ConfirmToDelete(id) {
            $('#deleteLink').click(function () {
                window.location.href = "/SpecialDate/SpecialDate/";
            });
            $('#ConfirmModal').show();
        }
        function ViewEdit(ID) {
            //showLoading();
            var url = "//SpecialDate/AddSpecialDate?Id=" + 1;

            $("#Masjdadmodelbody").load(url, function (e) {
                var id = $('#MAsjid_ID').val();
                if (id > 0) {
                    $('#btnsavemasjid').html("update ");
                }
                $("#AddMasjidModel").modal("show");
                // hideLoading();
            });
        }

        function ShowProduct(ID) {
            //showLoading();
            var url = "/Events/AddEvent?Id=" + 1;

            $("#Masjdadmodelbody").load(url, function (e) {
                var id = $('#MAsjid_ID').val();
                if (id > 0) {
                    $('#btnsavemasjid').html("update ");
                }
                $("#AddMasjidModel").modal("show");
                // hideLoading();
            });
        }
    </script>
