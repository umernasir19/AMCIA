﻿
@model FL_ACME.Models.ViewModels.Namaz_Property
@{
    Layout = null;
}
<div class="card-body">
    @*<form role="form" id="formaddtype">*@
@using (Ajax.BeginForm("AddUpdate", "Namaz", FormMethod.Post, new AjaxOptions { OnBegin = "return validate('addupdateform');", OnSuccess = "OnSuccess", OnFailure = "OnFailure" }, new { @id = "addupdateform", enctype = "multipart/form-data" }))
{

    <div class="row">
        <div class="col-sm-12">
            <!-- text input -->
            <div class="form-group">
                <label>Masjid :</label>
                 @Html.DropDownListFor(model => model.Masjid_Id, new SelectList(Model.MasjidList, "MAsjid_ID", "Masjid_Title"), "Select Masjid", new { @Class = "form-control select2" })


                @*<input type="text"  class="form-control" placeholder="@ViewBag.CustomerCode" disabled>*@
            </div>
            @Html.ValidationMessageFor(model => model.Masjid_Id, "", new { @class = "text-danger" })


        </div>
        @Html.HiddenFor(model => model.Namaz_ID)
    </div>

        <div class="row">
            
            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label>Fajar time:</label>
                    @Html.EditorFor(model => model.Fajar_Time, new { htmlAttributes = new { @placeholder = "Location", @class = "form-control" } })
                    @*<input type="text"  class="form-control" placeholder="@ViewBag.CustomerCode" disabled>*@
                </div>
                @Html.ValidationMessageFor(model => model.Fajar_Time, "", new { @class = "text-danger" })


            </div>
            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label>Zuhar time:</label>
                    @Html.EditorFor(model => model.Zuhar_Time, new { htmlAttributes = new { @placeholder = "Location", @class = "form-control" } })
                    @*<input type="text"  class="form-control" placeholder="@ViewBag.CustomerCode" disabled>*@
                </div>
                @Html.ValidationMessageFor(model => model.Zuhar_Time, "", new { @class = "text-danger" })


            </div>
        </div>

        <div class="row">

            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label>Asar time:</label>
                    @Html.EditorFor(model => model.Asar_Time, new { htmlAttributes = new { @placeholder = "Location", @class = "form-control" } })
                    @*<input type="text"  class="form-control" placeholder="@ViewBag.CustomerCode" disabled>*@
                </div>
                @Html.ValidationMessageFor(model => model.Asar_Time, "", new { @class = "text-danger" })


            </div>
            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label>Maghrib time:</label>
                    @Html.EditorFor(model => model.Maghrib_Time, new { htmlAttributes = new { @placeholder = "Location", @class = "form-control" } })
                    @*<input type="text"  class="form-control" placeholder="@ViewBag.CustomerCode" disabled>*@
                </div>
                @Html.ValidationMessageFor(model => model.Maghrib_Time, "", new { @class = "text-danger" })


            </div>
        </div>
        <div class="row">

            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label>Isha time:</label>
                    @Html.EditorFor(model => model.Isha_Time, new { htmlAttributes = new { @placeholder = "Location", @class = "form-control" } })
                    @*<input type="text"  class="form-control" placeholder="@ViewBag.CustomerCode" disabled>*@
                </div>
                @Html.ValidationMessageFor(model => model.Isha_Time, "", new { @class = "text-danger" })


            </div>
            
        </div>
        <div class="card-footer justify-content-between">
            <div class="row col-md-12">

                <div class="col-md-12">
                    <div class="float-right">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        @*<input type="button" value="save" id="btnsavemasjid" class="btn btn-primary" />*@

                    </div>
                </div>
            </div>
        </div>

    }

</div>

<script>

    $("#Masjid_Id").select2({
        theme: "default"

    });
    $("#btnsavemasjid").click(function () {
        Command: toastr["success"]("success", "Saved")

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-center",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        window.location.href = "/Masjid/Masjid";
    });
</script>