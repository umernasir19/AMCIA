                </div>
                @Html.ValidationMessageFor(model => model.Event_Location, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label>Event Date Urdu:</label>
                    @Html.EditorFor(model => model.Event_Date_Urdu, new { htmlAttributes = new { @placeholder = "Lat", @class = "form-control" } })
                    @*<input type="text"  class="form-control" placeholder="@ViewBag.CustomerCode" disabled>*@
                </div>
                @Html.ValidationMessageFor(model => model.Event_Date_Urdu, "", new { @class = "text-danger" })


            </div>
            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label>Event Date Eng:</label>
                    @Html.EditorFor(model => model.Event_Date_Eng, new { htmlAttributes = new { @placeholder = "Long", @class = "form-control" } })
                    @*<input type="text"  class="form-control" placeholder="@ViewBag.CustomerCode" disabled>*@
                </div>
                @Html.ValidationMessageFor(model => model.Event_Date_Eng, "", new { @class = "text-danger" })


            </div>
            @Html.HiddenFor(model => model.Event_Id)
        </div>
