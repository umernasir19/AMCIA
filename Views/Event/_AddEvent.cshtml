    @using (Ajax.BeginForm("AddUpdate", "Event", FormMethod.Post, new AjaxOptions { OnBegin = "return  validate('addupdateform');", OnSuccess = "OnSuccess", OnFailure = "OnFailure" }, new { @id = "addupdateform", enctype = "multipart/form-data" }))
    {
